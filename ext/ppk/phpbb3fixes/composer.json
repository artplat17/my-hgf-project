    "homepage": "http://www.ppkbb3cker.ru/",
    "version": "1.2.0",
    "time": "2020-11-28",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "PPK",
            "email": "protoneutron@yandex.com",
            "homepage": "http://www.ppkbb3cker.ru/",
            "role": "Автор"
        }
    ],
    "require": {
        "php": ">=5.3",
        "composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "phpBB3Fixes",
        "soft-require": {
             "phpbb/phpbb": "3.1,3.2,3.3"
        },
        "version-check": {
            "host": "www.ppkbb3cker.ru",
